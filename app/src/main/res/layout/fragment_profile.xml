<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="@android:color/white">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        <caiflyy.pjy.today.widgets.CircleImageView
                android:id="@+id/img_setting_camera"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:src="@drawable/shape_setting_ic_camera"
                android:visibility="gone"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"/>

        <caiflyy.pjy.today.widgets.CircleImageView
                android:id="@+id/img_setting_picture"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:src="@drawable/shape_setting_ic_picture"
                android:visibility="gone"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"/>

        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <caiflyy.pjy.today.widgets.CircleImageView
                    android:id="@+id/img_setting_portrait"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shape_setting_ic_portrait"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp"/>

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_setting_ic_plus_filled_100"
            />
        </FrameLayout>
    </FrameLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:scrollbars="none"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColorHint="@color/colorTextDark2nd">

                <EditText
                        android:id="@+id/edt_setting_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="@string/text_setting_username"
                        android:inputType="text"
                        android:padding="12dp"
                        android:enabled="false"
                        android:textColor="@color/colorTextDark"
                        android:textColorHint="#d3d3d3"
                        android:textSize="14dp"
                />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lineColor"
            ></LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColorHint="@color/colorTextDark2nd">

                <EditText
                        android:id="@+id/edt_setting_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="@string/text_setting_usermail"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="@color/colorTextDark"
                        android:textColorHint="#d3d3d3"
                        android:textSize="14dp"
                />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/lineColor"
            ></LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lineColor"></LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="@string/text_setting_usergrant"
                        android:textColor="@color/colorTextDark2nd"/>

                <RadioGroup
                        android:id="@+id/rg_setting_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <RadioButton
                            android:id="@+id/rd_setting_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_setting_male"
                            android:textColor="@color/colorTextDark"/>

                    <RadioButton
                            android:id="@+id/rd_setting_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="@string/text_setting_female"
                            android:textColor="@color/colorTextDark"/>
                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lineColor"></LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:text="@string/text_setting_can_edit"
                        android:textColor="@color/colorTextDark2nd"/>

                <Switch
                        android:id="@+id/sw_setting_can_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo"
                        android:layout_centerHorizontal="true"
                        android:checked="false"
                        android:elevation="0dp"
                        android:gravity="center"/>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/shape_setting_ic_edit_warning"
                    android:text="@string/text_setting_edit_message"
                    android:textColor="@color/colorTextDark2nd"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
